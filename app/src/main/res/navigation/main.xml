<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.heda.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_appFragment"
            app:destination="@id/navigation" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.heda.RegisterFragment"
        android:label="RegisterFragment" />
    <navigation android:id="@+id/navigation"
        app:startDestination="@id/appFragment">
        <fragment
            android:id="@+id/showRecipeFragment"
            android:name="com.heda.ShowRecipeFragment"
            android:label="ShowRecipeFragment" />
        <fragment
            android:id="@+id/recipesFragment"
            android:name="com.heda.RecipesFragment"
            android:label="recipes_fragment"
            tools:layout="@layout/recipes_fragment">
            <action
                android:id="@+id/action_recipesFragment_to_showRecipeFragment"
                app:destination="@id/showRecipeFragment" />
        </fragment>
        <fragment
            android:id="@+id/appFragment"
            android:name="com.heda.AppFragment"
            android:label="AppFragment" >
            <action
                android:id="@+id/action_appFragment_to_recipesFragment2"
                app:destination="@id/recipesFragment" />
        </fragment><action android:id="@+id/action_global_appFragment" app:destination="@id/appFragment"/>
    </navigation>
</navigation>