<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SyncingFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.heda.HomeFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/action_HomeFragment_to_RecipesFragment"
            app:destination="@id/RecipesFragment" />
    </fragment>
    <fragment
        android:id="@+id/SyncingFragment"
        android:name="com.heda.SyncingFragment"
        android:label="@string/loading"
        tools:layout="@layout/syncing_waiting_screen">

        <action
            android:id="@+id/action_SyncingFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/RecipesFragment"
        android:name="com.heda.RecipesFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/recipes_fragment">

        <action
            android:id="@+id/action_RecipesFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
</navigation>